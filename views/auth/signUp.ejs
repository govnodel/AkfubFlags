<%- include('../includes/header.ejs') %>

    <link rel="stylesheet" href="/css/auth/signUp.css">
</head>
<body>
    <div class="container">
        <%- include('../includes/errors.ejs') %>
        <form id="signUpMenu" action="/signUp" method="post">
            <div>
                <label for="email">Email</label>
                <input required type="email" name="email" value="<%= oldInput.email %>">
            </div>
            <div>
                <label for="login">Login</label>
                <input required type="text" name="login" value="<%= oldInput.login %>">
            </div>
            <div>
                <label for="password">Password</label>
                <input required type="password" name="password" value="<%= oldInput.password %>">
            </div>
            <div>
                <label for="confirmPassword">Repeat Password</label>
                <input required type="password" name="confirmPassword" value="<%= oldInput.confirmPassword %>">
            </div>
            <div>
                <button type="button">Enter</button>
            </div>
        </form>
    </div>
    
    <script src="/js/signUp.js"></script>

<%- include('../includes/footer.ejs') %>